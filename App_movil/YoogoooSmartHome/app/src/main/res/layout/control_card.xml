<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_margin="1sp">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="160dp">

        <View
            android:layout_width="180dp"
            android:background="#ffd5d5d5"
            android:id="@+id/linea"
            android:layout_height="2dp"
            android:layout_below="@+id/name_control"
            android:layout_alignLeft="@+id/name_control"
            android:layout_alignStart="@+id/name_control"
            android:layout_marginTop="5dp">

        </View>

        <View
            android:layout_width="2dp"
            android:background="#ffd5d5d5"
            android:id="@+id/lineaV"
            android:layout_height="130dp"
            android:layout_alignTop="@+id/linea"
            android:layout_alignRight="@+id/name_control"
            android:layout_alignEnd="@+id/name_control"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp">

        </View>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_control"
            android:layout_below="@+id/linea"
            android:layout_alignLeft="@+id/linea"
            android:layout_alignStart="@+id/linea"
            android:layout_toLeftOf="@+id/lineaV"
            android:layout_toStartOf="@+id/lineaV"
            android:layout_alignBottom="@+id/img_detail" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/img_control"
            android:layout_alignStart="@+id/img_control"
            android:id="@+id/comand_voice"
            android:layout_alignRight="@+id/lineaV"
            android:layout_alignEnd="@+id/lineaV" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:id="@+id/img_state"
            android:layout_above="@+id/img_detail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="18dp"
            android:layout_toRightOf="@+id/img_control"
            android:layout_toEndOf="@+id/img_control" />

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Large Text"
            android:id="@+id/name_control"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:id="@+id/img_detail"
            android:layout_toRightOf="@+id/comand_voice"
            android:layout_above="@+id/comand_voice"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

