<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/colorPrimary"
    android:layout_margin="1sp">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="160dp">

        <View
            android:layout_width="180dp"
            android:background="#ffd5d5d5"
            android:id="@+id/lineaH"
            android:layout_height="2dp"
            android:layout_marginTop="41dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        </View>

        <EditText
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/ctrl_id"
            android:layout_centerInParent="false"
            android:layout_above="@+id/lineaH"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ctrl_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/ctrl_info"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/ctrl_state"
            android:layout_alignStart="@+id/ctrl_state" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="120dp"
            card_view:srcCompat="@drawable/luz"
            android:id="@+id/ctrl_img"
            android:layout_alignTop="@+id/lineaH"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <View
            android:layout_width="2dp"
            android:background="#ffd5d5d5"
            android:id="@+id/lineaV"
            android:layout_height="118dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/ctrl_img"
            android:layout_toEndOf="@+id/ctrl_img">

        </View>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:srcCompat="@drawable/off"
            android:id="@+id/ctrl_state"
            android:layout_alignTop="@+id/ctrl_img"
            android:layout_toLeftOf="@+id/ctrl_id"
            android:layout_toStartOf="@+id/ctrl_id" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

